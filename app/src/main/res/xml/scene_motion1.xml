<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/collapsed"
        app:constraintSetEnd="@id/expanded"
        app:duration="650"
        >

        <OnClick
            app:clickAction="transitionToEnd"/>

    </Transition>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/viewBackground"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/videoViewContainer"
            app:layout_constraintStart_toStartOf="@id/videoViewContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint
            android:id="@id/videoViewContainer"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videoViewContainer">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="0"/>
        </Constraint>

        <Constraint
            android:id="@+id/eeee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/sample_text"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/videoViewContainer"
            app:layout_constraintLeft_toRightOf="@id/videoViewContainer"
            app:layout_constraintBottom_toBottomOf="@id/videoViewContainer"
            android:paddingLeft="8dp"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/viewBackground"
            app:layout_constraintTop_toTopOf="@id/videoViewContainer"
            app:layout_constraintStart_toStartOf="@id/videoViewContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/videoViewContainer"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:visibility="invisible"

            app:layout_constraintEnd_toEndOf="@id/ss"
            app:layout_constraintStart_toStartOf="@id/ss"
            app:layout_constraintTop_toTopOf="@id/ss"  />

        <Constraint
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videoViewContainer">
            <CustomAttribute
                app:attributeName="alpha"
                app:customFloatValue="1"/>
        </Constraint>


        <Constraint
            android:id="@+id/eeee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/sample_text"
            android:visibility="gone"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/videoViewContainer"
            app:layout_constraintTop_toBottomOf="@id/videoViewContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="8dp"/>

    </ConstraintSet>

</MotionScene>